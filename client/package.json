{
  "name": "client",
  "displayName": "StandardJS - JavaScript Standard Style",
  "description": "Visual Studio Code extension for JavaScript Standard Style with automatic fixing.",
  "version": "0.0.1",
  "author": "Sam Chen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chenxsan/vscode-standardjs.git"
  },
  "bugs": {
    "url": "https://github.com/chenxsan/vscode-standardjs/issues"
  },
  "engines": {
    "vscode": "^1.50.0"
  },
  "ts-standard": {
    "files": [
      "./src/**/*.ts"
    ],
    "envs": [
      "node"
    ]
  },
  "scripts": {
    "lint": "ts-standard | snazzy",
    "format": "ts-standard --fix | snazzy"
  },
  "devDependencies": {
    "vscode-languageclient": "^7.0.0",
    "vscode-nls": "^5.0.0"
  },
  "dependencies": {
    "@types/vscode": "^1.53.0",
    "snazzy": "file:../node_modules/snazzy",
    "ts-standard": "file:../node_modules/ts-standard",
    "vscode-uri": "^3.0.2"
  }
}
